<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get in Touch"
        android:textColor="@color/color_data"
        android:textSize="28sp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Taluk"
        android:textColor="@color/hint" />

    <TextView
        android:id="@+id/tv_taluk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Ernad"
        android:textColor="@color/color_data" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Village"
        android:textColor="@color/hint" />

    <TextView
        android:id="@+id/tv_village"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Eranad taluk"
        android:textColor="@color/color_data" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Address"
        android:textColor="@color/hint" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Address line1 \n Address2"
        android:textColor="@color/color_data" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/cerclular_shape"
            app:srcCompat="@drawable/ic_call"
            android:padding="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="20"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lan No"
                android:textColor="@color/hint" />

            <TextView
                android:id="@+id/tv_land_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0483 2766121"
                android:textColor="@color/color_data" />
        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/cerclular_shape"
            app:srcCompat="@drawable/ic_call"
            android:padding="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="20"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile No"
                android:textColor="@color/hint" />

            <TextView
                android:id="@+id/tv_moblie_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8547615800"
                android:textColor="@color/color_data" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/cerclular_shape"
            app:srcCompat="@drawable/ic_email"
            android:padding="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="20"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/hint" />

            <TextView
                android:id="@+id/tv_email"
                android:text="tlkerd@kerala.nic.in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_data" />
        </LinearLayout>

    </LinearLayout>
   <!-- <TextView
        android:id="@+id/just_for_margin"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>-->

</LinearLayout>